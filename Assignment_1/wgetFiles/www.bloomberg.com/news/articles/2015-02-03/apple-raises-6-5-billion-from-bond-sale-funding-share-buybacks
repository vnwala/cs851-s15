    <script type="text/javascript">
      (function(global) {
        "use strict";
        global.bbloader = {
          queue: {},
          loaded: {},
          enqueue: function(namespace, fn) {
            if (global.bbloader.loaded[namespace]) {
              return fn();
            }
            global.bbloader.queue[namespace] = global.bbloader.queue[namespace] || [];
            global.bbloader.queue[namespace].push(fn);
          },
          load: function(namespace, options) {
            global.bbloader.onload(function() {
              var s = document.createElement("script");
              s.type = options.type;
              s.async = options.async;
              s.src = options.src;
              function loaded(e) {
                var queue = global.bbloader.queue[namespace] || [];
                for (var i = 0, len = queue.length; i < len; ++i) {
                  queue.pop()();
                }
                global.bbloader.loaded[namespace] = true;
                s.removeEventListener("load", loaded, false);
              }
              s.addEventListener("load", loaded);
              global.document.body.appendChild(s);
            });
          },
          onload: function(fn) {
            if (global.addEventListener) {
              global.addEventListener("load", fn, false);
              return;
            }
            if (global.attachEvent) {
              global.attachEvent("onLoad", fn);
              return;
            }
            var onload = global.onload;
            if (typeof onload !== "function") {
              return window.onload = fn;
            }
            window.onload = function() {
              onload();
              fn();
            };
          },
        };
      })(window);
    </script>

