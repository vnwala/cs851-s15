function isExistInArray(array, value) {
	for (var i=0; i < array.length; i++) {
		if (array[i] == value) {
			return i;
		}
	}
	return -1;
}

function initialSearchBar() {
                                                    
    var _localOptions = [];
        _localOptions.push({label: 'Public Blogs', iconClass: 'lconnSprite lconnSprite-iconBlogs16', scope: 'public_blogs'  });
