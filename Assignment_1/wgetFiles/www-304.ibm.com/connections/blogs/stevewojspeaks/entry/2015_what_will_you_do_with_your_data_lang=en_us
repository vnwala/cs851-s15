  function toggleDiv()
  {
     obj = document.getElementById("overlayDiv");
    if (obj.style.display == "block")  {
         obj.style.display = "none";       
         document.getElementById("related_text").innerHTML = ">> More related resources";
    }
   else  {
       document.getElementById("related_text").innerHTML = "[Close]";
       obj.style.display = "block";
       obj.style.top = event.x;
   } 
}
